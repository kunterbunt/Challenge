<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sebastians.challenge.ChallengeDetailFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/app_color_dark">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sebastians.challenge.ChallengeDetailFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/app_color_dark">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageSwiper"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33" />

    <sebastians.challenge.views.ProgressView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/progressBar"

        android:clickable="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.675"
        android:fillViewport="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/description"
                android:id="@+id/description"
                android:textColor="@color/dark_gray"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center_horizontal">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/dark_gray"></LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>

    <ImageButton
        style="@style/FAB.Final"
        android:id="@+id/toggleChallengeActivityButton"
        android:src="@android:drawable/ic_media_play"

        />
</RelativeLayout>