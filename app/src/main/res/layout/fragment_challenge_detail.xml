<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="sebastians.challenge.ChallengeDetailFragment"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="sebastians.challenge.ChallengeDetailFragment"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageSwiper"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.4"
                android:background="@color/app_color_dark" />

            <View
                style="@style/separator"
                android:layout_margin="0dp"
                android:background="@color/dark_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

                <sebastians.challenge.views.ProgressView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/progressBar"

                    android:clickable="true"
                    android:layout_weight="0.1"
                 />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/TIMELINE"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="64dp"
                    android:layout_marginEnd="64dp" />
            </RelativeLayout>

            <View
                style="@style/separator"
            />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:fillViewport="true" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/TASK"
                        android:layout_gravity="left"
                        android:layout_marginLeft="256dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/name"
                        android:id="@+id/name"
                        android:textColor="@color/app_color_dark"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/description"
                        android:id="@+id/description"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="bottom|center_horizontal">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/dark_gray"></LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>



        </LinearLayout>

        <ImageButton
            style="@style/FAB.Final"
            android:id="@+id/toggleChallengeActivityButton"
            android:src="@android:drawable/ic_media_play"
            />

    </RelativeLayout>

    <View
    android:id="@+id/expanded_image_overlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:visibility="invisible"
    android:alpha="1"
        />

    <ImageView
    android:id="@+id/expanded_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:src="@drawable/arrow_down"
        />

</FrameLayout>