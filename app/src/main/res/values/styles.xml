<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/app_color</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="separator">
        <item name="android:layout_width">fill_parent</item>>
        <item name="android:layout_height">1dp</item>>
        <item name="android:background">@color/app_color_dark</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <!-- FAB Button style base. -->
    <style name="FAB">
        <item name="android:layout_width">@dimen/fab_button_diameter</item>
        <item name="android:layout_height">@dimen/fab_button_diameter</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_button_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/fab_button_margin_right</item>
        <item name="android:src">@mipmap/fab_ic_add</item>
        <item name="android:tint">@color/dark_gray</item>
    </style>

    <!-- FAB Button style for low Android version. -->
    <style name="FAB.Final">
        <item name="android:background">@drawable/button_fab</item>
    </style>

</resources>
